<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context=".Detalhe">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="695dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="199dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:text="Informações"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-light"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtsa"/>

                <TextView
                    android:text="Nome:"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtn"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp" android:id="@+id/txtNome"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>

                <TextView
                    android:text="Endereço:"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txte"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="27dp" android:id="@+id/txtEndereco"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>

                <TextView
                    android:text="Número de Telefone:"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/taxte"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="27dp" android:id="@+id/txtNumero"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Cidade:"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtB" android:layout_weight="1"/>
                    <TextView
                        android:text="Estado:"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtE" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" android:id="@+id/txtCidade" android:layout_weight="1"/>
                    <TextView
                        android:layout_width="29dp"
                        android:layout_height="match_parent" android:id="@+id/txtEstado" android:layout_weight="1"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>
                <TextView
                    android:text="Email: "
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" android:id="@+id/textView26"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp" android:id="@+id/txtEmail"/>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>


                <TextView
                    android:layout_width="match_parent"
                    android:text="Preço:"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" android:id="@+id/Sasdaas"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp" android:id="@+id/txtPreco"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
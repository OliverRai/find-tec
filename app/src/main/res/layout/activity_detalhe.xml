<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFF"
    android:orientation="vertical"
    tools:context=".Detalhe">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnvoltar"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey"
                android:clickable="true"
                app:srcCompat="@drawable/voltar_icon" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar3"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:layout_weight="1"
                android:theme="?attr/actionBarTheme">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="FINDTEC"
                    android:textStyle="bold"
                    android:layout_marginRight="80dp"
                    android:textSize="20sp" />

            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="695dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Informações"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-light"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtsa"/>

                <TextView
                    android:text="Nome:"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtn"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp" android:id="@+id/txtNome"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>

                <TextView
                    android:text="Endereço:"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txte"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="27dp" android:id="@+id/txtEndereco"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>

                <TextView
                    android:text="Número de Telefone:"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/taxte"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="27dp" android:id="@+id/txtNumero"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Cidade:"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtB" android:layout_weight="1"/>
                    <TextView
                        android:text="Estado:"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtE" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtCidade"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="29dp"
                        android:layout_height="match_parent" android:id="@+id/txtEstado" android:layout_weight="1"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>
                <TextView
                    android:text="Email: "
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" android:id="@+id/textView26"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp" android:id="@+id/txtEmail"/>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>


                <TextView
                    android:layout_width="match_parent"
                    android:text="Preço:"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" android:id="@+id/Sasdaas"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp" android:id="@+id/txtPreco"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:focusable="false"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Descrição:"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:id="@+id/Sasdaaaas"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtDesc"/>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>